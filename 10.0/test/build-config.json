{
  "kind": "BuildConfig",
  "apiVersion": "v1beta1",
  "metadata":{
    "name": "openshift/wildfly-100-centos7-build"
  },
  "triggers": [
    {
      "type": "github",
      "github": {
        "secret": "secret101"
      }
    },
    {
      "type": "generic",
      "generic": {
        "secret": "secret101"
      }
    }
  ],
  "parameters": {
    "source" : {
      "type" : "Git",
      "git" : {
        "uri": "git://github.com/openshift/sti-wildfly.git"
      }
    },
    "strategy": {
      "type": "Custom",
      "customStrategy": {
        "image": "openshift/sti-image-builder",
        "exposeDockerSocket": true,
        "env": [
          { "name": "IMAGE_NAME", "value": "openshift/wildfly-100-centos7-candidate"}
        ]
      }
    }
  },
  "labels": {
    "name": "wildfly-100-centos7-build"
  }
}
